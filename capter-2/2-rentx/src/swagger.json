{
  "openapi": "3.0.0",
  "info": {
    "title": "Rentx Documentation",
    "description": "This is an API Rent",
    "version": "1.0.0",
    "contact": {
      "email": "menezes@email.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a category",
        "description": " Create a new category",
        "security": [
          { "beareAuth": [] }
        ],
        "requestBody": {
          "content":{
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category name sample",
                  "description": "Category description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "List alll categories",
        "description": "List all categories",
          "responses": {
            "200":{
              "description": "Success",
              "content": {
                "application/json": {
                  "schema":{
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "description":{
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
      }
    },
    "/categories/import": {
      "post":{
        "tags": ["Category"],
        "summary": "Upload a category list file",
        "description": "Upload a category list file.",
        "security": [
          { "beareAuth": [] }
        ],
        "requestBody":{
          "content":{
            "multipart/form-data": {
              "schema": {
                "type":"object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "security": [
          { "beareAuth": [] }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definations/Specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Specification already exists."
          }
        }
      }
    },
    "/session": {
      "post":{
        "tags": ["Session"],
        "summary": "Authentication user",
        "description": "Authentitcation user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "email": {
                    "type":"string"
                  },
                  "password":{
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }
      }
    },
    "/cars": {
      "post": {
        "tags": ["Cars"],
        "summary": "Create a new car",
        "description": "Create a new car",
        "security": [
          { "beareAuth": [] }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/definations/Car"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Car already exists!"
          }
        }
      }
    },
    "/cars/images/{id}": {
      "post": {
        "tags": ["Cars"],
        "summary": "Upload images",
        "description": "Upload Images",
        "security": [
          { "beareAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Car id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content":{
            "multipart/form-data":{
              "schema": {
                "type":"object",
                "properties": {
                  "images": {
                    "type": "array",
                    "items": {
                      "type":"string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Created"
          }
        }
      }
    }
  },
  "definations": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type":"string"
        },
        "description": {
          "type":"string"
        }
      }
    },
    "Car": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "daily_rate": {
          "type": "number"
        },
        "license_plate": {
          "type": "string"
        },
        "fine_amount": {
          "type": "number"
        },
        "brand": {
          "type": "string"
        },
        "category_id": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "beareAuth": {
        "type": "http",
        "scheme": "bearer",
        "beareFormat": "JWT"
      }
    }
  }
}